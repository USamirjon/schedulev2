<%- contentFor('body') %>

<h1 class="mb-4">Admin Dashboard</h1>

<div class="row">
    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card border-primary h-100">
            <div class="card-body text-center">
                <h1 class="display-4 text-primary"><%= userCounts.total %></h1>
                <h5 class="card-title">Total Users</h5>
            </div>
            <div class="card-footer bg-transparent border-primary">
                <a href="/admin/users" class="btn btn-sm btn-primary w-100">Manage Users</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card border-success h-100">
            <div class="card-body text-center">
                <h1 class="display-4 text-success"><%= userCounts.students %></h1>
                <h5 class="card-title">Students</h5>
            </div>
            <div class="card-footer bg-transparent border-success">
                <a href="/admin/users" class="btn btn-sm btn-success w-100">View Students</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card border-info h-100">
            <div class="card-body text-center">
                <h1 class="display-4 text-info"><%= userCounts.teachers %></h1>
                <h5 class="card-title">Teachers</h5>
            </div>
            <div class="card-footer bg-transparent border-info">
                <a href="/admin/users" class="btn btn-sm btn-info w-100 text-white">View Teachers</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3 mb-4">
        <div class="card border-warning h-100">
            <div class="card-body text-center">
                <h1 class="display-4 text-warning"><%= subjectCount %></h1>
                <h5 class="card-title">Subjects</h5>
            </div>
            <div class="card-footer bg-transparent border-warning">
                <a href="/admin/subjects" class="btn btn-sm btn-warning w-100">Manage Subjects</a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6 mb-4">
        <div class="card border-secondary h-100">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">Schedule Overview</h5>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <span class="fw-bold">Total Schedule Entries:</span>
                    <span class="badge bg-secondary rounded-pill"><%= scheduleCount %></span>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-bold">Student Groups:</span>
                    <span class="badge bg-secondary rounded-pill"><%= groupCount %></span>
                </div>
            </div>
            <div class="card-footer bg-transparent border-secondary">
                <a href="/admin/schedules" class="btn btn-sm btn-secondary w-100">View All Schedules</a>
            </div>
        </div>
    </div>

    <div class="col-md-6 mb-4">
        <div class="card border-danger h-100">
            <div class="card-header bg-danger text-white">
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="/admin/users" class="btn btn-outline-danger">Add New User</a>
                    <a href="/admin/subjects" class="btn btn-outline-danger">Add New Subject</a>
                    <a href="/admin/schedules" class="btn btn-outline-danger">Manage Schedules</a>
                </div>
            </div>
        </div>
    </div>
</div>